<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura,opencover</Format>
          <Exclude>
            [*]*Migrations.*
            [*]*Program.*
            [*]*Startup.*
            [*]*.Designer.*
            [*]*.AssemblyInfo.*
            [xunit*]*
            [*Tests*]*
            [*Test*]*
          </Exclude>
          <ExcludeByFile>
            <Exclude>**/Migrations/**</Exclude>
            <Exclude>**/bin/**</Exclude>
            <Exclude>**/obj/**</Exclude>
          </ExcludeByFile>
          <IncludeTestAssembly>false</IncludeTestAssembly>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>